generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"] //enables full text search in postgres
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model News {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  title       String
  type        String
  description String
  imageURL    String

  @@map("news") // the table name in sql database will be jobs as sql table name is in lowercase
}
